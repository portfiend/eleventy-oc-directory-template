---
layout: base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all

permalink: /tagged/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>

{% for namespace, data in metadata.namespaces %}
  {% set taglist = collections[tag] | namespaced(namespace) %}
  <h2>
    {{data.title}} ({{taglist | length}})
  </h2>

  <ul>
    {% for post in taglist | reverse %}
      <li>
        <a href="{{ post.url }}">{{ post.data.pageTitle }}</a>
      </li>
    {% endfor %}
  </ul>
{% endfor %}

<p>
  <a href="/tags">Back to tag directory</a>
</p>