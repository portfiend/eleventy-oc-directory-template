<!-- 
MAIN PANEL 
-->
{% tabPanel id="main", listId="setting" %}
	<article class="card locard locard-{{name | slugify}}">
		<header class="locard-header card-header">
			<h2>{{name}}</h2>
			<div class="subtitle">{{subtitle}}</div>
		</header>
		<div class="locard-banner">
			{% lightboxImg "banner.jpg", "Example image", {
				artist: "Artist name here",
				artist_website: "https://example.com",
				license: "All rights reserved",
				creation_date: "2023-11-20"
			} %}
		</div>
		<div class="locard-details">
			<table class="locard-table">
				<tbody>
					{% keyValue "Population", "Example A" %}
					{% keyValue "Climate", "Example B" %}
					{% keyValue "Terrain", "Example C" %}
					{% keyValue "Government", "Example D" %}
				</tbody>
			</table>
			<div class="locard-biography">
				{% renderMarkdown %}
